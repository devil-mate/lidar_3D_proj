<launch>
  <!-- Arguments -->
  <!-- <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/> -->
  <arg name="model" default="burger" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="configuration_basename" default="turtlebot3_lds_2d.lua"/>
  <!-- <arg name="set_base_frame" default="base_footprint"/>
  <arg name="set_odom_frame" default="odom"/>
  <arg name="set_map_frame"  default="map"/> -->
	<arg name="scan_topic" default="$(optenv ROBOT_LOCALIZATION_SCAN_TOPIC front_laser/scan)"/>
	<arg name="map_frame" default="robot_map"/>
	<arg name="odom_frame" default="robot_odom"/>
	<arg name="base_frame" default="robot_base_link"/>

  <!-- Gmapping -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <remap from="scan" to ="$(arg scan_topic)"/>
    <rosparam command="load" file="$(find summit_xl_localization)/config/gmapping_params.yaml"  subst_value="true"/>
    <!-- <rosparam command="load" file="$(find summit_xl_localization)/config/slam_gmapping.yaml"  subst_value="true"/> -->
  </node>
</launch>
